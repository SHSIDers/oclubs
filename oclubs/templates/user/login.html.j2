{% extends "base.html.j2" %}{% from 'macros.html.j2' import get_messages %}
{% block title %}Login{% endblock %}
{% block content %}

<!-- Below Navbar -->
<div class="container">
	<h1 class="title text-center">Login to oClubs!</h1>
	<div class="login_message">
	{{ get_messages(['login']) }}
	</div>

	<form class="login_block form-group" action="{{ url_for('login_submit') }}" method="post">
		<input name="_csrf_token" type="hidden" value="{{ csrf_token() }}">
		<input name="next" type="hidden" value="{{ request.args.get('next') or '' }}">
		<label for="studentid">Username:</label>
		<input type="text" class="form-control" id="studentid" name="username" placeholder="Enter username">
		<br>
		<label for="password">Password:</label>
		<input type="password" class="form-control" id="password" name="password" placeholder="Enter password">
		<div class="clearfix"></div>
		<label id="remember"><input type="checkbox" value="remember" name="remember">&nbsp;Remember me</label>
		<a id="forgotpw" class="pull-right" href="{{ url_for('userblueprint.forgotpw') }}">Forgot password?</a>
		<div class="clearfix"></div>
		<input class="btn btn-primary" type="submit" value="Login">
	</form>
	<div class="login_block">
		<p>If you do not have an account, please ask your teacher to get your personal account.</p>
	</div>
</div>

{% endblock %}
