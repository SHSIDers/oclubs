	<div class="list-group">
		<li class="list-group-item active">{{ group.name }}</li>
		{% for elmt in group.elements %}
		<a href="{{ url_for(endpoint, res_filter=elmt.url) }}" class="list-group-item{% if elmt.selected %} selected{% endif %}">{{ elmt.name }}</a>
		{% endfor %}
	</div>
	{% endfor %}
	<div class="list-group">
		<form action="{{ url_for(endpoint, res_filter=res_filter.to_url()) }}" method="post">
			<input name="_csrf_token" type="hidden" value="{{ csrf_token() }}">
			{{ form.classrooms_list.label }}{{ form.classrooms_list }}
			{{ form.submit }}
		</form>
