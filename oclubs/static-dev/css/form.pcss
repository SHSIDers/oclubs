/*

CSS styles for forms:

*/
input[type=file] {
  padding: 5px;
}

input[type=date]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  display: none;
}

.form-group {

  & label {
    margin-bottom: 0;
    font-weight: normal;
  }

  & .select2-container {
    width: 100% !important;
  }
}

.input-group {
  margin-top: 20px;
  margin-bottom: 20px;
}

textarea {
  width: 100%;
  resize: vertical;
}

.select2-container {
  & .select2-selection--single {
    height: 34px;

    & .select2-selection__rendered {
      line-height: 34px;
    }

    & .select2-selection__arrow {
      height: 32px;
    }
  }
}

[hidden] {
  display: none !important;
}

.radio label{
  padding-left: 0px;
}
