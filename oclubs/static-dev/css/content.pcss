/*

CSS styles for main content:



*/
#separator_title {
  margin-top: 8px;
  margin-bottom: 23px;
}

#search_bar_beside_title {
  margin-top: 20px;
  margin-bottom: 5px;
}

.title_link {
  text-decoration: underline;

  & :hover {
    text-decoration: none;
  }
}

.list-group .list-group-item.selected {
  font-weight: bold;
}
/* Table elements that act as clickable links */
tr.clickable:hover {
  cursor: pointer;
}

.clickable-a {
  text-decoration: none;
  cursor: default;

  & :hover {
    text-decoration: none !important;
    cursor: pointer;
  }
}
/* Table elements that act as clickable links */
/* Post things: Jumbotron and well <div>s */
.club_list_image {
  width: 100%;
  height: auto;
}

.post_image {
  border: 0;
  @media (max-width: 2560px) {
